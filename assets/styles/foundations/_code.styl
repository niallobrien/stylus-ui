pre
  background $color--tertiary
  border-left rem(3) solid $color--primary
  font-family Menlo, Consolas, "Bitstream Vera Sans Mono", "DejaVu Sans Mono", Monaco, monospace

code
  background $color--tertiary
  border-radius .4rem
  font-size 86%
  padding rem(2) rem(5)
  margin 0
  white-space nowrap

pre > code
  background transparent
  border-radius 0
  display block
  padding 1rem 1.5rem
  white-space pre
  overflow-x scroll
